		<script type="text/javascript">
			$(document).ready(function(){
				$('#formulario input').on('change', function() {
   					$("#respuesta").val(($('input[name=opcion]:checked', '#formulario').val())); 
				});

				if($("#estado").val() == "1")
				{
					$("#Bienvenida").addClass("oculto");
					$("#juego").removeClass("oculto")
				}
				else
				{
					$("#Bienvenida").addClass("animated slideInLeft").removeClass("oculto");
				}
				
				$("#iniciar").click(function(){
					$("#Bienvenida").addClass("slideOutRight").one('webKitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend', function(){ 

$("#Bienvenida").addClass("oculto");
$("#juego").addClass("animated").addClass("slideInDown").removeClass("oculto");
 });
					
					
				});
			});
			
